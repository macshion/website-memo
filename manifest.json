{
  "manifest_version": 3,
  "name": "网页笔记助手",
  "description": "快速记录和管理网页笔记",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg"
    }
  },
  "permissions": [
    "storage",
    "sidePanel",
    "tabs"
  ],
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
} 